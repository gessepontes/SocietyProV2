@model SocietyProV2.Domain.Entities.Jogador
@using SocietyProV2.Domain.Entities

@{
    ViewData["Title"] = "Novo jogador";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Novo Jogador</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        <form enctype="multipart/form-data" asp-controller="Jogador" asp-action="Create" class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                            <div class="form-group">
                                <label asp-for="IDTIME" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <select asp-for="IDTIME"
                                            class="form-control" asp-items="@(new SelectList(@ViewBag.ListaTime,"ID", "NOME"))">
                                        <option value="">Selecione um time</option>
                                    </select>
                                </div>

                                <span asp-validation-for="IDTIME" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NOME" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="NOME" class="form-control col-md-7 col-xs-12" />
                                </div>
                                <span asp-validation-for="NOME" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="RG" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="RG" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="RG" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DATANASCIMENTO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="DATANASCIMENTO" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="DATANASCIMENTO" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TELEFONE" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="TELEFONE" class="form-control col-md-7 col-xs-12" data-inputmask="'mask' : '(99) 9999-9999'" />
                                </div>

                                <span asp-validation-for="TELEFONE" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FOTO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="FOTO" type="file" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="FOTO" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="POSICAO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <select asp-for="POSICAO"
                                            class="form-control"
                                            asp-items="@(new SelectList(Enum.GetValues(typeof(Posicao))))">
                                        <option value="">Selecione um tipo</option>
                                    </select>
                                </div>

                                <span asp-validation-for="POSICAO" class="text-danger"></span>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Jogador")'">Voltar</button>
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

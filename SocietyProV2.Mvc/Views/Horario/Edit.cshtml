@model SocietyProV2.Domain.Entities.Horario
@using SocietyProV2.Domain.Entities

@{
    ViewData["Title"] = "Editar horário";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Editar horário</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        <form asp-controller="Horario" asp-action="Edit" class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="IDITEMCAMPO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <select asp-for="IDITEMCAMPO"
                                            class="form-control" asp-items="@(new SelectList(@ViewBag.ListaCampo,"ID", "DESCRICAO"))">
                                        <option value="">Selecione um campo item</option>
                                    </select>
                                </div>

                                <span asp-validation-for="IDITEMCAMPO" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DIASEMANA" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <select asp-for="DIASEMANA"
                                            class="form-control"
                                            asp-items="@(new SelectList(Enum.GetValues(typeof(DiaSemana))))">
                                        <option value="">Selecione um dia da semana</option>
                                    </select>
                                </div>

                                <span asp-validation-for="DIASEMANA" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="HORARIO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="HORARIO" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="HORARIO" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="STATUS" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-1 col-sm-6 col-xs-12">
                                    <input asp-for="STATUS" class="col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="STATUS" class="text-danger"></span>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Horario")'">Voltar</button>
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            DatetimePickerHora("#HORARIO");
        });
    </script>

    <script src="~/js/diversos.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

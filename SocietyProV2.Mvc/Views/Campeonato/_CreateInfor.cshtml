@model SocietyProV2.Domain.Entities.FotoInforCampeonato
@using  SocietyProV2.Domain.Entities


    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Informações do campeonato</h4>
    </div>
    <div class="modal-body">
        <form enctype="multipart/form-data" asp-action="CreateInfor" class="form-horizontal form-label-left"  data-toggle="validator">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@Model.IDCAMPEONATO" id="IDCAMPEONATO" name="IDCAMPEONATO" />
            <div class="form-group">
                <label asp-for="NOME" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                <div class="col-md-5 col-sm-6 col-xs-12">
                    <input asp-for="NOME" class="form-control col-md-7 col-xs-12" required/>
                </div>
                <span asp-validation-for="NOME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ISEQUENCIA" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                <div class="col-md-5 col-sm-6 col-xs-12">
                    @Html.DropDownListFor(model => model.ISEQUENCIA,
                    new SelectList(ViewBag.Sequencia),
                    new { @class = "form-control", style = "width:100px" })
                </div>

                <span asp-validation-for="ISEQUENCIA" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FOTO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                <div class="col-md-5 col-sm-6 col-xs-12">
                    <input asp-for="FOTO" type="file" class="form-control col-md-7 col-xs-12" />
                </div>

                <span asp-validation-for="FOTO" class="text-danger"></span>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success">Salvar</button>
            </div>

        </form>
    </div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
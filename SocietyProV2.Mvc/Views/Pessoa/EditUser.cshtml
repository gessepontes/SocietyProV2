@model SocietyProV2.Domain.Entities.Pessoa

@{
    ViewData["Title"] = "Editar pessoa";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Editar Pessoa</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form enctype="multipart/form-data" asp-controller="Pessoa" asp-action="EditUser" class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <input asp-for="ID" type="hidden" class="form-control col-md-7 col-xs-12" />

                            <div class="form-group">
                                <label asp-for="NOME" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="NOME" class="form-control col-md-7 col-xs-12" />
                                </div>
                                <span asp-validation-for="NOME" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EMAIL" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="EMAIL" readonly class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="EMAIL" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="RG" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="RG" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="RG" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DATANASCIMENTO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="DATANASCIMENTO" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="DATANASCIMENTO" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TELEFONE" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="TELEFONE" class="form-control col-md-7 col-xs-12" data-inputmask="'mask' : '(99) 99999-9999'" />
                                </div>

                                <span asp-validation-for="TELEFONE" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FOTO" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="FOTO" type="file" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="FOTO" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SENHA" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <input asp-for="SENHA" type="password" class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Avatar</label>
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <img alt="64x64" data-src="holder.js/64x64" class="media-object img-thumbnail" src="@Url.Content(@Model.FOTO)" width="100" height="100">
                                </div>
                            </div>

                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
